{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": false,
    "noImplicitAny": false,
    "removeComments": true,
    "noLib": false,
    "allowSyntheticDefaultImports": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es2017",
    "sourceMap": true,
    "allowJs": true,
    "baseUrl": "./src",
    "rootDir": "./src",
    "outDir": "./dist",
    "lib": [
      "dom",
      "es2016",
      "es2017",
      "esnext"
    ]
  },
  "include": [
    "src/main.ts"
  ],
  "exclude": [
    "node_modules",
    "**/*.spec.ts"
  ]
}